<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: rgb(57,112,151);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LongBreakController">
    <children>
        <Button layoutX="91.0" layoutY="73.0" onAction="#switchToPomodoroScene" text="Pomodoro" />
        <Button layoutX="264.0" layoutY="73.0" onAction="#switchToShortBreakScene" text="Short Break" />
        
        <Label fx:id="timerLabel" layoutX="170.0" layoutY="124.0" text="15:00" textFill="WHITE">
            <font>
                <Font name="Arial Rounded MT Bold" size="96.0" />
            </font>
        </Label>
        <Button layoutX="166.0" layoutY="263.0" mnemonicParsing="false" onAction="#startButtonClicked" text="Start" />
        <Button layoutX="275.0" layoutY="263.0" mnemonicParsing="false" onAction="#pauseButtonClicked" text="Pause" />
        <Button layoutX="382.0" layoutY="263.0" mnemonicParsing="false" onAction="#resetButtonClicked" text="Reset" />
        <Label layoutX="410.0" layoutY="73.0" text="Long Break" textFill="WHITE">
            <font>
                <Font name="Arial Rounded MT Bold" size="26.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
